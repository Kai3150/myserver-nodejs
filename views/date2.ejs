<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>Date of meeting</title>
    <!-- スタイルCSS -->
    <link rel="stylesheet" href="/date2.css">
    <link rel="stylesheet" href="/navigation.css">
    <!-- WPA化 -->
    <link rel="shortcut icon" href="/icon512.png" />
    <link rel="manifest" href="/manifest.json">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
</head>
<body>
    <%- include("common/header.ejs")%>
    <%- include("common/sideNav.ejs")%>
    <div class="flex-wrapper-two">
        <div class="title">
            <%= results[0].name %>
        </div>
        <div class="btn-group-vertical" role="group" aria-label="First group">
            <% for (let k=0; k < results.length ; k++) { %>
                <a href="/public/keywordhtml?date=<%=results[k].date %>" class="btn btn-outline-primary btn-lg btn-block px-5 num<%=k %>"><%= results[k].japanesedate %></a>
            <% } %>
        </div>
    </div>
    <%- include("common/bottomNav.ejs")%>
    <script>

        const date = new Date();
        const today = `${date.getMonth()+1}月${date.getDate()}日`;
        const num0 = document.querySelector('.num0').innerHTML;
        console.log(num0);
        if (num0 == today) {
            document.querySelector('.num0').innerHTML = '今日';
        }

        date.setDate(date.getDate()-1)
        const yesterday = `${date.getMonth() + 1}月${date.getDate()}日`;
        const num1 = document.querySelector('.num1').innerHTML;
        if (num1 == yesterday) {
            document.querySelector('.num1').innerHTML = '昨日';
        }

    </script>
</body>
</html>
