<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Keyword of contents</title>
        <!-- リセットCSS -->
        <link rel="stylesheet" href="https://unpkg.com/modern-css-reset/dist/reset.min.css"/>
        <!-- スタイルCSS -->
        <link rel="stylesheet" href="/keyword.css" type="text/css">
        <!-- フォント -->
        <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    </head>

    <body>
      <!-- navi -->
      <div class="flex-wrapper-one">
        <a href="/public/datehtml" class="icon">
            <img alt="" class="homei" src="https://static.overlay-tech.com/assets/28c74ab9-3a4b-47ba-96d5-cccb59e25b90.png" />
            <p class="home">HOME</p>
        </a>
        <a href="/comment.html" class="icon">
            <img alt="" class="commenti" src="https://static.overlay-tech.com/assets/9577c39e-9967-4125-bd3a-09c0f69d49eb.svg" />
            <p class="comment">COMMENT</p>
        </a>
        <a href="/search.html" class="icon">
            <img alt="" class="searchi" src="https://static.overlay-tech.com/assets/b0a2f06d-0988-4432-836e-fb58664d7ee4.svg" />
            <p class="search">SEARCH</p>
        </a>
        <a href="/upload.html" class="icon">
            <img alt="" class="uploadi" src="https://static.overlay-tech.com/assets/2cac0365-75fe-4eee-a30d-c732f6b6641b.svg" />
            <p class="upload">UPLOAD</p>
        </a>
        <a href="/setting.html" class="icon">
            <img alt="" class="settingi" src="https://static.overlay-tech.com/assets/28ea5c18-b9c0-45fe-a8b9-59fe9b4ae169.svg" />
            <p class="setting">SETTING</p>
        </a>
      </div>

      <!-- clock & keyword -->
      <div class="flex-wrapper-two">

        <img alt="" class="arrow1" src="https://static.overlay-tech.com/assets/6288c40a-3570-4c86-925d-ea16594da7a1.svg">
        <img alt="" class="arrow2"src="https://static.overlay-tech.com/assets/9bb4921f-9475-4718-9655-56fe24f89b58.svg">

        <p class="day"><%= results[0].date %></p>

        <a href="javascript:history.back()">
          <div class="num-1-1">
            <img alt="" class="return" src="https://static.overlay-tech.com/assets/3790ab4e-eed9-48ef-b511-82875c0a3340.svg"/>
          </div>
        </a>

        <div id="sa">
          <div id="keywords">
              <%let tmp %>
              <% for (let k=0; k < results.length ; k++) { %>
                <div class="c<%=k+1 %>">
                  <a href="detailhtml?id=<%= results[k].id %>" class="detail">
                    <img class="cir<%=k+1 %>" src="https://static.overlay-tech.com/assets/d2e75451-1aaa-4848-a3f7-50da3f65d965.png" />
                    <% keywords = results[k].keywords.split(',') %>
                    <% for (let i=0; i < keywords.length ; i++) { %>
                      <p class="kw1<%= i + 1%>"><%= keywords[i] %></p>
                    <% } %>
                  </a>
                </div>
                <% tmp = k %>
              <% } %>

              <% for (let k=tmp+1; k < 4-tmp ; k++) { %>
                <div class="c<%=k+1 %>">
                  <img class="cir<%=k+1 %>" src="https://static.overlay-tech.com/assets/d2e75451-1aaa-4848-a3f7-50da3f65d965.png" />
                </div>
              <% } %>
          </div>
        </div>
      </div>
      </div>
      <script src="/keyword.js"></script>
    </body>
</html>
